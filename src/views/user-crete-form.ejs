<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de registro</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/user/create" method="POST">
				<div class="row product-detail">
				  <div class="col-12 col-md-6">
					<label for="name" class="form-label">Nombre:</label>
					<input type="text" id="name" name="first_name" placeholder="Ej: Juan" class="form-input" value=" <%= locals.old && old.first_name %>">
					<% if (locals.errors && errors.first_name) { %>
					  <p class="feedback"><%= errors.first_name.msg %></p>
					<% } %>
				  </div>
				  <div class="col-12 col-md-6">
					<label for="price" class="form-label">Apellido:</label>
					<input type="text" id="price" name="last_name" placeholder="Ej: Pérez" class="form-input" value="<%= locals.old && old.last_name %>">
					<% if (locals.errors && errors.last_name) { %>
					  <p class="feedback"><%= errors.last_name.msg %></p>
					<% } %>
				  </div>
				  <div class="col-12 col-md-6">
					<label for="discount" class="form-label">Email:</label>
					<input type="text" id="discount" name="email" placeholder="Ej: ejemplo@correo.com" class="form-input" value="<%= locals.old && old.email %>">
					<% if (locals.errors && errors.email) { %>
					  <p class="feedback"><%= errors.email.msg %></p>
					<% } %>
				  </div>
				  <div class="col-12">
					<label for="description" class="form-label">Contraseña:</label>
					<input type="password" name="password" id="description" class="form-input">
					<% if (locals.errors && errors.password) { %>
					  <p class="feedback"><%= errors.password.msg %></p>
					<% } %>
				  </div>
				  <div class="col-12">
					<button type="submit" class="buy-now-button">Guardar usuario</button>
				  </div>
				</div>
			  </form>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>